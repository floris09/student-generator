<h1>My match today</h1>
<% if @pair != nil %>
<%= @pair[0] %> -
<%= @pair[1] %>



<h1>History</h1>
<% @daypairs.each do |daypair| %>
<% daypair.pairs.each do |pairs| %>
<% pairs.each do |pair| %>
<% if pair == current_user.full_name  %>
<li><u><%= daypair.date %> : </u></br>
<%= pairs.join(" - ") %>
<% end %>
<% end %>
<% end %>
</li></br>
<% end %>
<% else %>
<h1>No pairs for you :( </h1>
<% end %>
